<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:backgroundTint="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.chanakya.ecommerceprojectver2.fragments.MainFragment"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/naem2"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoginMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonLoginMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:backgroundTint="#F2BA49"
        android:text="Already A user? Sign In"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegistrationMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/buttonRegistationMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="141dp"
        android:layout_marginStart="9dp"
        android:backgroundTint="#F2BA49"
        android:text="Not A User? Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/buttonLoginMain"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoginMain" />

    <Button
        android:id="@+id/buttonForgetPasswordMain"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#F2BA49"
        android:text="ForgetPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonResetPasswordMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistationMain" />

    <Button
        android:id="@+id/buttonResetPasswordMain"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginBottom="86dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#F2BA49"
        android:text="Reset Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonForgetPasswordMain"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegistationMain" />


</android.support.constraint.ConstraintLayout>
