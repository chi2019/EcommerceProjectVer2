<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"


    tools:context="com.example.chanakya.ecommerceprojectver2.MainActivity"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:padding="20dp"
        >

        <ImageView
            android:id="@+id/imageViewCountryImage"
            android:layout_width="170dp"
            android:layout_height="154dp"
            android:layout_margin="@dimen/cardview_default_elevation"
            android:background="@drawable/lines_in_border"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="140dp"
        android:layout_height="32dp"
        android:layout_marginBottom="78dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/quick"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/black"
        android:textColorLink="@color/cardview_light_background"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</android.support.v7.widget.CardView>



