<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/border"
    tools:context="com.example.chanakya.ecommerceprojectver2.fragments.LoginFragment"
    tools:layout_editor_absoluteY="25dp">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/buttonResetPassword"
        android:layout_width="144dp"
        android:layout_height="48dp"
        android:layout_marginBottom="139dp"
        android:layout_marginEnd="123dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="#F2BA49"
        android:text="Reset Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/editTextMobileNumberReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#1A1110"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextOldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Old Password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#1A1110"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="Enter Old Password"
        android:textAlignment="center"
        android:textColor="#1A1110"
        app:layout_constraintBottom_toTopOf="@+id/editTextPasswordLogin"
        app:layout_constraintEnd_toEndOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Enter Mobile Number"
        android:textAlignment="center"
        android:textColor="#1A1110"
        app:layout_constraintBottom_toTopOf="@+id/editTextMobileNumberLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="44dp"
        android:fontFamily="monospace"
        android:text="Reset Password"
        android:textAlignment="center"
        android:textColor="#1f1f14"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="215dp"
        android:layout_height="25dp"
        android:layout_marginEnd="73dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="#1A1110"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="129dp"
        android:layout_height="19dp"
        android:layout_marginEnd="125dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="23dp"
        android:text="Enter New Password"
        android:textAlignment="center"
        android:textColor="#1A1110"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPasswordLogin" />
</android.support.constraint.ConstraintLayout>
